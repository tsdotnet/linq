{
  "compileOnSave": true,
  "compilerOptions": {
    "declaration": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "target": "es2022",
    "module": "commonjs",
    "strict": true,
    "sourceMap": true,
    "removeComments": false,
    "importHelpers": true,
    "moduleResolution": "node",
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "dist"
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "tests/**/*",
    "dist/**/*",
    "node_modules"
  ]
}
